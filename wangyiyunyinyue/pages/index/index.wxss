/* 轮播图样式 */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 五个图标导航区域样式 */
.navContainer{
  display: flex;
  justify-content: space-around;
}
.navItem{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(to right, #ED694C,#EC3B1A);
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  font-size: 45rpx;
  color: white;
  margin: 20rpx 0;
}
.navItem :nth-child(2){
  font-size: 26rpx;
}

.hr{
  width: 100%;
  height: 3rpx;
  background: #eee;
  margin: 20rpx 0;
}

